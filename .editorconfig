# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true

[*.{json,lock,json.dist,xml}]
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
